if SOC_SERIES_STM32WBAX

rsource "Kconfig.defconfig.stm32wba*"

config ICACHE
	default y

config CACHE_MANAGEMENT
	default y

choice CACHE_TYPE
	default EXTERNAL_CACHE
endchoice

config STM32_LPTIM_TIMER
	default y if PM

config STM32_FLASH_PREFETCH
	default y

config BT_STM32WBA
	select DYNAMIC_INTERRUPTS
	select DYNAMIC_DIRECT_INTERRUPTS
	select ENTROPY_GENERATOR
	select USE_STM32_HAL_RAMCFG

if BT_STM32WBA

choice LIBC_IMPLEMENTATION
	default NEWLIB_LIBC
endchoice

choice LINKER_ORPHAN_CONFIGURATION
	default LINKER_ORPHAN_SECTION_PLACE
endchoice

config ENTROPY_STM32_CLK_CHECK
	default n

config FPU
	default y

config SYSTEM_WORKQUEUE_STACK_SIZE
	default 2048

endif

config IEEE802154_STM32WBA
	select USE_STM32_HAL_CORTEX
	select USE_STM32_HAL_RAMCFG
	select DYNAMIC_INTERRUPTS
	select DYNAMIC_DIRECT_INTERRUPTS
	select ENTROPY_GENERATOR
	select HAS_STM32LIB

config NET_L2_CUSTOM_IEEE802154_STM32WBA
	bool "ST MAC"
	select NET_L2_CUSTOM_IEEE802154
	select CONFIG_NETWORKING

config ZIGBEE_STM32WBA
	bool "STM32WBA zigbee stack"
	select NET_L2_CUSTOM_IEEE802154_STM32WBA

config ZIGBEE_STM32WPAN_DEVICE_TYPE
	string "Zigbee Device Type"
	default "FFD"
	help 
	  FFD: Full Feature Device
	  RFD: Reduced Feature Device
	depends on ZIGBEE_STM32WBA

if IEEE802154_STM32WBA

config FPU
	default y
	
choice LIBC_IMPLEMENTATION
	default NEWLIB_LIBC
endchoice

config ENTROPY_STM32_CLK_CHECK
	default n

config SYSTEM_WORKQUEUE_STACK_SIZE
	default 2048	

endif

if PM_S2RAM

config COUNTER
	default y

config COUNTER_RTC_STM32_SUBSECONDS
	default y

config STM32_LPTIM_STDBY_TIMER
	default y

config TICKLESS_KERNEL
	default y

config COUNTER_RTC_STM32_SAVE_VALUE_BETWEEN_RESETS
	default y

config IDLE_STACK_SIZE
	default 512

endif

endif # SOC_SERIES_STM32WBAX
